<div class="plant-block">
  <div class="plant-photo-container ">
    <img class"plant-photo" src="/img/logo.png" alt="plant photo" />
    <% if plant.living %>
      <p class="alive-time">Alive <%= (Time.now.to_date - plant.created_at.to_date).numerator %> days </p>
    <% else %>
      <p class="dead-time">Lived <%= (plant.died_at.to_date - plant.created_at.to_date).numerator %> days </p>
    <% end %>
  </div>
  <h2> <%= plant.name %> </h2>
  <p class="species"> <%= plant.species %> </p>

</div>
